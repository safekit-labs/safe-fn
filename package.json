{
  "name": "@safekit/safe-fn",
  "version": "0.3.0-alpha.2",
  "author": "safekit",
  "repository": {
    "type": "git",
    "url": "https://github.com/safekit-labs/safe-fn.git"
  },
  "main": "./dist/src/index.js",
  "module": "./dist/src/index.js",
  "devDependencies": {
    "@effect/schema": "^0.75.5",
    "@types/node": "^24.0.4",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "arktype": "^2.1.20",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "next-safe-action": "^8.0.7",
    "prettier": "^3.6.2",
    "runtypes": "^7.0.4",
    "superstruct": "^2.0.2",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.8.3",
    "typia": "^9.3.1",
    "valibot": "^1.1.0",
    "vite": "^7.0.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4",
    "yup": "^1.6.1",
    "zod": "^3.25.68-beta.0"
  },
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "import": "./dist/src/index.js",
      "require": "./dist/src/index.js"
    }
  },
  "bugs": {
    "url": "https://github.com/safekit-labs/safe-fn/issues"
  },
  "description": "[EXPERIMENTAL] A lightweight type-safe function builder with interceptors, schema validation, and context management for TypeScript applications.",
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "package.json"
  ],
  "homepage": "https://github.com/safekit-labs/safe-fn",
  "keywords": [
    "typescript",
    "functions",
    "handlers",
    "interceptors",
    "middleware",
    "validation",
    "type-safe",
    "builder",
    "schema",
    "context",
    "safe-functions",
    "experimental",
    "alpha"
  ],
  "license": "MIT",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build:tsc": "tsc -p tsconfig.build.json",
    "build:resolve": "tsc-alias -p tsconfig.build.json",
    "build": "bun run clean && bun run build:tsc && bun run build:resolve",
    "typecheck": "tsc --noEmit -p tsconfig.json",
    "dev": "tsc -p tsconfig.json --watch",
    "clean": "rm -rf dist",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,css,html}\"",
    "test": "vitest",
    "git": "bun run typecheck && bun run build && bun run test --run && git add . && git commit -m",
    "postgit": "git push --all"
  },
  "type": "module",
  "types": "./dist/src/index.d.ts"
}
